	<!-- 
	Remarks:    This Table holds the result of converting a prospect sponsor when called from the business process. 

	History:
	Date            Modified By     Comments
	26-Mar-2013		Memphis			Initial Version.
	-->	

	<!-- define fields on the table -->
	<Fields>
		<TextField Name="SPONSORLOOKUPID" Description="Sponsor Lookup ID" Length="10" Required="true"/>
		<NumberField Name="NUMBERSPONSORSHIPCONVERSIONS" Description="Number of sponsorships converted" Type="int" />
		<DateField Name="CONVERSIONDATE" Description="Date of conversion" IncludeTime="false" Required="true"/>
		<TextField Name="CONVERSIONRESULT" Description="Result of conversion (Fail/Success)" Length="7" Required="true"/>
		<TextField Name="EXCEPTIONMESSAGE" Description="Error message if failed" DefaultValue="" Length="4000" Required="false" />
	</Fields>

